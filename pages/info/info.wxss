/* info.wxss */

page {
    background: #fff;
    padding: auto 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}
page .mine_box {
    height: 100%;
    width: 100%;
    /* background: url(http://bmob-cdn-7744.b0.upaiyun.com/2016/12/22/b6476d9540a5b4e1807e2f23434bd4e6.png) no-repeat center center; */
    background-size: 100% auto;
    box-sizing: border-box;
}
.user_show{
     background: #1195db;
}

.gif {
    padding-top: 30rpx; 
    width:100%;
    height:400rpx;
    background: url(http://ordltxx69.bkt.clouddn.com/50421463449540.gif) no-repeat center center;
}
.g-bda-userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page__ft{
    position:absolute;
    bottom: 0rpx;
    width:100%;
    height:400rpx;

}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  margin-bottom: 2rpx;
  border-radius: 50%;
  border: 1px solid #1195db;
}
.userinfo-nickname{
  color: #fff;
}
.user_show text {
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
    color: #fff;
    font-weight: normal;
    text-align: center;
    display: block;
    padding-top: 20rpx;
    padding-bottom: 70rpx;
}

.operations view, .operations navigator {
    display: block;
    width: 400rpx;
    margin: 0 auto;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #646464;
    border-top: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
    margin-top: -1rpx;
    font-size: 32rpx;
}
.navigator-hover button {
  background-color: #dedede;
}

.other-navigator-hover button {
  background-color: #dedede;
}